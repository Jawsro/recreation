/* pages/cakelist/cakelist.wxss */
.banner{
  width: 100%;
  height: 250rpx;
}
.image{
  width: 100%;
  height: 250rpx;
}
.title{
  margin-top:50rpx;
  font-size: 40rpx;
  color: #684029;
  font-family: 'PingFang SC','Heiti SC','微软雅黑',Helvetica,Arial;
  text-align: center
}
.i{
  display: block;
  width:60rpx;
  height: 5rpx;
  margin: 6rpx auto ;
  background: #E6C5B8;
}
.cakelist{
  display: flex;
  flex-wrap: wrap;
  margin-top: 15rpx;
  color: #684029;
}

.main{
  width:47%;
  margin-left: 1.5%;
  margin-right: 1.5%;
}
.main .image{
  width: 100%;
  height:270rpx;
}
.name{
  height: 50rpx;
  overflow:hidden; 
  white-space:nowrap; 
  text-overflow:ellipsis;
  padding-left: 15rpx;
  font-size: 30rpx;
  text-align: center;
}
.content{
  height: 50rpx;
  overflow:hidden; 
  white-space:nowrap; 
  text-overflow:ellipsis;
  padding-left: 15rpx;
  font-size: 25rpx;
  text-align: center;
}